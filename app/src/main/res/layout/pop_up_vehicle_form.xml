<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="20dp"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/baseline_cancel_24"
                android:padding="15dp"
                >

            </ImageView>


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="Enter Additional Vehicle"
                    android:fontFamily="@font/lobster"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Brand"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:layout_marginHorizontal="16dp"
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="30dp">
                            <EditText
                                android:id="@+id/vehicle_brand_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Brand"
                                android:background="@drawable/custom_edit_text"
                                android:padding="10dp"
                                android:textSize="18sp"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"
                            android:padding="5dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="30dp">
                            <EditText
                                android:id="@+id/vehicle_name_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name"
                                android:background="@drawable/custom_edit_text"
                                android:padding="10dp"
                                android:textSize="18sp"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Color"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"
                            android:padding="5dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="30dp">
                            <EditText
                                android:id="@+id/vehicle_color_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Color"
                                android:background="@drawable/custom_edit_text"
                                android:padding="10dp"
                                android:textSize="18sp"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seat Capacity"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"
                            android:padding="5dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="30dp">

                            <Spinner
                                android:id="@+id/seat_capacity_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Seat Capacity"
                                android:background="@drawable/custom_edit_text"
                                android:textSize="18sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="10dp"/>
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Plate"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"
                            android:padding="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ex: 50-K 12345"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:layout_marginHorizontal="16dp"
                            android:padding="5dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="30dp">
                            <EditText
                                android:id="@+id/vehicle_number_plate_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Number Plate"
                                android:background="@drawable/custom_edit_text"
                                android:padding="10dp"
                                android:textSize="18sp"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Image"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="65dp">
                            <ImageView
                                android:id="@+id/vehicle_image_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_image"/>
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/submitNewVehicleBtn"
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Submit" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
